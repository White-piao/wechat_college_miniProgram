<view class="cu-card case bg-white" style="position:fixed;width:100%;height:100%;">
  <view class="shadow">
    <vtu-input-group title="">
      <vtu-input border 
        v-class="titleInput"
        placeholder="请输入板块名字"
        adjust-position="{{true}}"
        value="" 
        type="input"   
        maxlength="20"
        text-align="center"
        bind:input="titleChange"
        >
        </vtu-input>
      <vtu-input
        border placeholder="请输入板块描述" 
        value="" 
        type="textarea" 
        text-align="left" 
        text-height="700rpx"
        maxlength="1500"
        bind:input="contentChange"
        adjust-position="true"
        >
      </vtu-input>
      <!-- 上传图片 -->
      <view class="cu-item shadow margin">
        <view class="cu-bar bg-white margin-top">
          <view class="action">
            图片上传
          </view>
          <view class="action">
            {{imgList.length}}/1
          </view>
        </view>
        <view class="cu-form-group">
          <view class="grid col-4 grid-square flex-sub">
            <view class="bg-img" wx:for="{{imgList}}" wx:key="index" bindtap="ViewImage" data-url="{{imgList[index]}}">
              <image src='{{imgList[index]}}' mode='aspectFill'></image>
              <view class="cu-tag bg-red" catchtap="DelImg" data-index="{{index}}">
                <text class="cuIcon-close"></text>
              </view>
            </view>
            <view class="solids" bindtap="ChooseImage" wx:if="{{imgList.length<1}}">
              <text class="cuIcon-cameraadd"></text>
            </view>
          </view>
        </view>
      </view>
      <!-- 上传图片End -->
      <!-- <vtu-btn bind:click="submitCard" disabled="{{name==''?true:content==''?true:false}}"
        v-class="submitBtn" type="success" shadow="{{true}}" >
        发布 -->
      <!-- </vtu-btn> -->
    </vtu-input-group>
    <button 
        bindtap="submitCard" 
        class="flex cu-btn align-center bg-blue lg margin-top margin-bottom " 
        disabled="{{name.length>0&&content.length>0?false:true}}">发布</button>
  </view>
</view>